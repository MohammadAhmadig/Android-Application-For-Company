<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/btn_sec2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_image_gradient"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"

            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_share2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"

                android:contentDescription="@string/app_name"
                />
            <ImageView
                android:id="@+id/image_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="15dp"
                android:background="@drawable/icon"
                android:contentDescription="@string/app_name"
                />
            <ImageView
                android:id="@+id/image_share3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:contentDescription="@string/app_name"
                />
            <TextView
                android:id="@+id/text_up_title"
                android:fontFamily="@font/fanavaribold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="اداره کل ارتباطات و فناوری اطلاعات استان کهگیلویه و بویراحمد"

                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gridView0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_sec2"
        android:layout_margin="1dp"
        android:horizontalSpacing="0dp"

        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:background="#F3EFED"/>

</RelativeLayout>